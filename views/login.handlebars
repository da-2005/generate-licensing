  <div class="container">
    <div class="row position-relative">
      <div class="col-sm-6">
        <div class="card mt-4 p-2 text-center border border-3 border-primary ">
          <div class="card-header mb-2 border-bottom border-2 border-dark">
            Signup
          </div>
          <form id="signup-form">
            <div class="mb-3">
              <label for="exampleInputUsername" class="form-label">Username</label>
              <input type="username" class="form-control" id="username-signup" aria-describedby="UsernameHelp">
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp">
