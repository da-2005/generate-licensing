<div class="container d-flex justify-content-center">
    <div class="card w-50 border border-primary border-3">
        <div class="card-body text-center">
            <form id="new-project">
        
                <div class="mb-3">
                    <label for="exampleInputProject" class="form-label">Project Name</label>
                    <input type="text" class="form-control" id="project-name" aria-describedby="emailHelp">
                </div>
        
                <button type="submit" class="btn btn-primary text-center">Create</button>
            </form>
        </div>
    </div>
</div>



<div class="row justify-content-center col-12 m-0">
    {{#each usersProjects as | Project |}}
        <div class="card m-3 p-0 col-md-12 col-lg-5">
            <div class="card-body">
                <div class="card-title text-center fs-2">
                    {{Project.project_name}}
                </div>
                <a class="d-flex justify-content-evenly btn btn-primary" href="/users/keys?project_id={{Project.project_id}}" role="button">Go to Keys</a>
            </div>
        </div>
    {{/each}}
</div>


<script src="/js/projects.js"></script>